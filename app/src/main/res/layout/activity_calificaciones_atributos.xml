<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calificaciones_Atributos">

    <LinearLayout
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/fondo_principal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@drawable/fondo_menu">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:backgroundTint="#F6F6F6"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <Button
                        android:onClick="ViewLogin"
                        android:id="@+id/chapass_btn_back"
                        android:layout_width="38dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/arrow_left"
                        tools:ignore="ContentDescription,SpeakableTextPresentCheck,ImageContrastCheck" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/boton_asi"
                        android:layout_marginRight="15sp"
                        android:layout_marginLeft="15sp"
                        android:layout_marginTop="15dp"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5sp"
                            android:layout_marginRight="5sp"
                            android:layout_marginTop="5sp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0sp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:layout_marginRight="5sp"
                                android:id="@+id/eval_atributo_txt_atributo"
                                android:text="Programacion Orientada a Objetos"
                                android:fontFamily="@font/poppins_semibold"
                                android:textSize="17sp"
                                android:layout_gravity="start"
                                android:textColor="#000">
                            </TextView>
                            <LinearLayout
                                android:layout_width="0sp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2.9"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Nivel: "
                                    android:layout_marginRight="10sp"
                                    android:fontFamily="@font/cairo_light"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"></TextView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Incipiente"
                                    android:id="@+id/eval_atributo_txt_nivel"
                                    android:layout_marginRight="10sp"
                                    android:fontFamily="@font/cairo_light"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"></TextView>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/spinners_gray"
                                    android:layout_marginLeft="4sp">

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10sp">
                            <Button
                                android:id="@+id/eval_atributo_btn_descripcion"
                                android:layout_width="70dp"
                                android:layout_height="25dp"
                                android:text="Descripción"
                                android:fontFamily="@font/cairo_light"
                                android:textAllCaps="false"
                                android:background="@drawable/new_boton_degradado"
                                android:textColor="@color/white"
                                android:textSize="10sp"
                                android:layout_margin="10sp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Meta:"
                                android:fontFamily="@font/cairo_light"
                                android:textStyle="bold"
                                android:layout_marginTop="10sp"
                                android:layout_marginLeft="30sp"
                                android:layout_marginRight="5sp"
                                android:textColor="@color/black"
                                android:textSize="16sp"></TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/eval_atributo_txt_meta"
                                android:text="80"
                                android:fontFamily="@font/cairo_light"
                                android:textStyle="bold"
                                android:layout_marginTop="10sp"
                                android:layout_marginRight="5sp"
                                android:textColor="@color/black"
                                android:textSize="16sp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/student_select_txt_claveGrupo"
                                android:text="Logro:"
                                android:layout_marginTop="10sp"
                                android:layout_marginLeft="30sp"
                                android:layout_marginRight="10sp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/cairo_light"
                                android:textStyle="bold"
                                android:textSize="16sp"></TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/eval_atributo_txt_logro"
                                android:text="78"
                                android:fontFamily="@font/cairo_light"
                                android:textStyle="bold"
                                android:layout_marginTop="10sp"
                                android:layout_marginRight="5sp"
                                android:textColor="@color/black"
                                android:textSize="16sp"></TextView>

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="10sp"
                        android:layout_marginLeft="15sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="4sp"
                        android:background="@color/blu_btn"
                        android:layout_marginLeft="15sp"
                        android:layout_marginRight="15sp">
                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="10"
                        android:padding="10dp"
                        app:cardCornerRadius="20dp"
                        android:backgroundTint="@color/white"/>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rec_list_asig"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:padding="5dp"
                            android:orientation="vertical"
                            android:scrollbarStyle="insideOverlay"
                            app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                            >
                        </androidx.recyclerview.widget.RecyclerView>
                    </ScrollView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>