<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuscarCurso">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/fondo_menu"
        >


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="15dp"
            android:layout_weight="10"
            android:padding="20dp"
            app:cardCornerRadius="20dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    >
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:text="Buscar curso..."
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/black_overlay"
                        />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:src="@mipmap/buscacurso"
                        />
                </LinearLayout>


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            >
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:layout_marginVertical="15dp"
                                android:padding="5dp"
                                android:text="Graficación"
                                android:gravity="start|center"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="20dp"
                                android:background="@drawable/btnredondo"
                                />
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="35dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:src="@drawable/baseline_add_circle_24"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            >
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:layout_marginVertical="15dp"
                                android:padding="5dp"
                                android:text="Ingles VIII"
                                android:gravity="start|center"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="20dp"
                                android:background="@drawable/btnredondo"
                                />
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="35dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:src="@drawable/baseline_add_circle_24"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            >
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:layout_marginVertical="15dp"
                                android:padding="5dp"
                                android:text="Taller de investigacion II"
                                android:gravity="start|center"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="20dp"
                                android:background="@drawable/btnredondo"
                                />
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="35dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:src="@drawable/baseline_add_circle_24"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            >
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:layout_marginVertical="15dp"
                                android:padding="5dp"
                                android:text="Administración de redes"
                                android:gravity="start|center"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="20dp"
                                android:background="@drawable/btnredondo"
                                />
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="35dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:src="@drawable/baseline_add_circle_24"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            >
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:layout_marginVertical="15dp"
                                android:padding="5dp"
                                android:text="Aplicaciones nativas de codigo propietario"
                                android:gravity="start|center"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="20dp"
                                android:background="@drawable/btnredondo"
                                />
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="35dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:src="@drawable/baseline_add_circle_24"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            >
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:layout_marginVertical="15dp"
                                android:padding="5dp"
                                android:text="Aplicaciones multiplataforma"
                                android:gravity="start|center"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="20dp"
                                android:background="@drawable/btnredondo"
                                />
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="35dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:src="@drawable/baseline_add_circle_24"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            >
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:layout_marginVertical="15dp"
                                android:padding="5dp"
                                android:text="Seguridad en Tecnologia Movil"
                                android:gravity="start|center"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="20dp"
                                android:background="@drawable/btnredondo"
                                />
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="35dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:src="@drawable/baseline_add_circle_24"
                                />
                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>
            </LinearLayout>



        </androidx.cardview.widget.CardView>


    </LinearLayout>
</FrameLayout>