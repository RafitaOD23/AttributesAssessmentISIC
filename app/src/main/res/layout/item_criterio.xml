<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/eval_atributtes_card3"
    android:layout_height="wrap_content"
    android:backgroundTint="#F6F6F6"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="start">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Criterio específico"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/cairo_light"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:layout_gravity="end">
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal"
        android:layout_gravity="end|bottom"
        android:layout_marginRight="10sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/eval_atributtes_txt_criterioEspe3"
                android:layout_width="0sp"
                android:layout_weight="3"
                android:padding="10sp"
                android:layout_height="wrap_content"
                android:hint="Criterio  Específico"
                android:layout_marginTop="60sp"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="10sp"
                android:fontFamily="@font/cairo_light"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/eval_atributtes_txt_puntos9"
                android:layout_width="0sp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                android:hint="0"
                android:layout_marginTop="60sp"
                android:layout_marginBottom="10sp"
                android:textAlignment="center"
                android:fontFamily="@font/cairo_light"
                android:textSize="16sp" />
            <TextView
                android:layout_width="0sp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:hint="/"
                android:textAlignment="center"
                android:layout_marginTop="60sp"
                android:layout_marginBottom="10sp"
                android:fontFamily="@font/cairo_light"
                android:textSize="28sp" />
            <TextView
                android:id="@+id/eval_atributtes_txt_puntos3"
                android:layout_width="0sp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                android:hint="30"
                android:layout_marginTop="60sp"
                android:layout_marginBottom="10sp"
                android:textAlignment="center"
                android:fontFamily="@font/cairo_light"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>